<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="17dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pass_detail_card"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="@id/pass_detail_barcode"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_toolbar"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            android:layout_height="0dp"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="8dp" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/pass_detail_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.awscherb.cardkeeper.ui.view.PkPassHeaderView
            android:id="@+id/pass_detail_header"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pass_detail_strip"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            android:layout_width="0dp"
            android:scaleType="center"
            app:layout_constraintDimensionRatio="2.36"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_header"
            android:layout_height="0dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/pass_detail_primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            app:justifyContent="space_evenly"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:flexDirection="row"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_header"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end" />

        <androidx.constraintlayout.widget.Barrier
            app:barrierDirection="bottom"
            android:id="@+id/pass_detail_header_barrier"
            app:constraint_referenced_ids="pass_detail_strip,pass_detail_primary"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/pass_detail_auxiliary"
            android:layout_width="0dp"
            android:paddingTop="16dp"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:foregroundGravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:justifyContent="space_between"
            app:flexDirection="row"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_header_barrier"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/pass_detail_secondary"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="16dp"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:foregroundGravity="center"
            app:justifyContent="space_between"
            app:flexDirection="row"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_auxiliary"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end" />

        <ImageView
            android:id="@+id/pass_detail_footer"
            android:scaleType="center"
            app:layout_constraintDimensionRatio="19"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".5"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/pass_detail_card"
            app:layout_constraintStart_toStartOf="@id/pass_detail_card"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_secondary"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/pass_detail_barcode"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_footer"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:visibility="gone"
            android:id="@+id/pass_detail_expired"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:shadowColor="#ffffff"
            android:shadowDx="1.01"
            android:textStyle="bold"
            android:shadowDy="1.1"
            android:shadowRadius="1.1"
            android:layout_marginTop="16dp"
            tools:visibility="visible"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/pass_detail_card"
            app:layout_constraintEnd_toEndOf="@id/pass_detail_card"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_barcode"
            android:text="@string/fragment_pass_detail_expired" />

        <TextView
            android:id="@+id/pass_last_updated"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textStyle="italic"
            android:textSize="12sp"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Last updated 6:30 PM"
            app:layout_constraintTop_toBottomOf="@id/pass_detail_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>