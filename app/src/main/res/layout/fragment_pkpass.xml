<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="17dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/pass_detail_card"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@id/pass_detail_barcode"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_toolbar"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp"
        />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pass_detail_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <com.awscherb.cardkeeper.ui.view.PkPassHeaderView
        android:id="@+id/pass_detail_header"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/pass_detail_strip"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="2.36"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_header"
        android:layout_height="0dp"
        />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/pass_detail_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:justifyContent="space_evenly"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:flexDirection="row"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_header"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        />

    <androidx.constraintlayout.widget.Barrier
        app:barrierDirection="bottom"
        android:id="@+id/pass_detail_header_barrier"
        app:constraint_referenced_ids="pass_detail_strip,pass_detail_primary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/pass_detail_auxiliary"
        android:layout_width="0dp"
        android:paddingTop="16dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:foregroundGravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:justifyContent="space_between"
        app:flexDirection="row"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_header_barrier"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/pass_detail_secondary"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="16dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:foregroundGravity="center"
        app:justifyContent="space_between"
        app:flexDirection="row"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_auxiliary"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        />

    <ImageView
        android:id="@+id/pass_detail_barcode"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/pass_detail_secondary"
        tools:src="@mipmap/ic_launcher"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>